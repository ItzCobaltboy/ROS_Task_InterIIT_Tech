<?xml version="1.0"?>
<robot name="car" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Link for the car body (rectangle) -->
  <link name="car_body">
    <visual>
      <geometry>
        <box size="1.0 0.5 0.2"/> <!-- Length, Width, Height -->
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Wheels (4 wheels) -->
  <!-- Front Left Wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- Front Right Wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- Joints to attach the wheels to the car body -->
  <!-- Front Left Wheel Joint -->
  <joint name="left_wheel_joint" type="revolute">
    <parent link="car_body"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.5 0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Front Right Wheel Joint -->
  <joint name="right_wheel_joint" type="revolute">
    <parent link="car_body"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.5 -0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Rear Left Wheel Joint -->
  <joint name=left_wheel_joint" type="revolute">
    <parent link="car_body"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.5 0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Rear Right Wheel Joint -->
  <joint name=right_wheel_joint" type="revolute">
    <parent link="car_body"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.5 -0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

</robot>
