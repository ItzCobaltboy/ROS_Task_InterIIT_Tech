<?xml version="1.0"?>
<robot name="four_wheel_drive_robot">
  <!-- Materials -->
  <material name="Blue">
    <color rgba="0 0 1 1"/>
  </material>

  <!-- Base link (chassis) -->
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Front left wheel -->
  <link name="left_wheel_link">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Front right wheel -->
  <link name="right_wheel_link">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear left wheel -->
  <link name="rear_left_wheel_link">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear right wheel -->
  <link name="rear_right_wheel_link">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Front left wheel joint -->
  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="0.25 0.15 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="10"/>
  </joint>

  <!-- Front right wheel joint -->
  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="0.25 -0.15 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="10"/>
  </joint>

  <!-- Rear left wheel joint -->
  <joint name="rear_left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="-0.25 0.15 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="10"/>
  </joint>

  <!-- Rear right wheel joint -->
  <joint name="rear_right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="-0.25 -0.15 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="10"/>
  </joint>

  <!-- Gazebo plugin for 4-wheel drive -->
  <gazebo>
    <plugin name="four_wheel_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <robotNamespace>/</robotNamespace>
      <leftWheelJoint>front_left_wheel_joint</leftWheelJoint>
      <rightWheelJoint>front_right_wheel_joint</rightWheelJoint>
      <leftRearWheelJoint>rear_left_wheel_joint</leftRearWheelJoint>
      <rightRearWheelJoint>rear_right_wheel_joint</rightRearWheelJoint>
      <wheelSeparation>0.5</wheelSeparation>
      <wheelRadius>0.1</wheelRadius>
      <publishRate>50.0</publishRate>
      <commandTopic>cmd_vel</commandTopic>
    </plugin>
  </gazebo>
</robot>
